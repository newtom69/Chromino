@using  Data.ViewModel
@model List<PictureGameVM>
@{
    ViewData["Title"] = "Single games";
    int gamesNumber = Model.Count;
}

<p><a asp-area="" asp-controller="Games" asp-action="Index">Retour</a></p>

@switch (gamesNumber)
{
    case 0:
        <p><b>Vous n'avez aucune partie solo terminée</b></p>
        break;
    case 1:
        <h3>Vous avez 1 partie solo terminée</h3>
        <partial name="_ThumbnailPartial" model="Model" />
        break;
    default:
        <h3>Vous avez @gamesNumber parties solo terminées</h3>
        <partial name="_ThumbnailPartial" model="Model" />
        break;
}
<br />
<p>
    <a asp-controller="Game" asp-action="New"><input type="button" class="btn btn-primary" value="Nouvelle partie" /></a>
</p>
<p>
    <a asp-area="" asp-controller="Games" asp-action="Index">Retour</a>
</p>