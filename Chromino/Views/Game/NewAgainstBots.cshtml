@{
    ViewData["Title"] = "Créer une nouvelle partie contre l'ordinateur";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="NewAgainstBots">
            <div id="groupPlayer2" class="form-group">
                <label class="control-label">Selectionnez le nombre d'adversaires désiré</label>
                <input id="botsNumber" name="botsNumber" type="number" min="1" max="7" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Créer la partie" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
