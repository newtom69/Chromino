
@{
    ViewData["Title"] = "Start new game";
}

<h1>StartNew</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="StartNew">

            <div class="form-group">
                <label class="control-label">Player 1 (leave empty for bot player)</label>
                <input name="player1Id" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 2 (leave empty for no player)</label>
                <input name="player2Id" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 3 (leave empty for no player)</label>
                <input name="player3Id" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 4 (leave empty for no player)</label>
                <input name="player4Id" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 5 (leave empty for no player)</label>
                <input name="player5Id" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 6 (leave empty for no player)</label>
                <input name="player6Id" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 7 (leave empty for no player)</label>
                <input name="player7Id" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label class="control-label">Player 8 (leave empty for no player)</label>
                <input name="player8Id" class="form-control" type="text" />
            </div>

            <div class="form-group">
                <input type="submit" value="Start new game" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

