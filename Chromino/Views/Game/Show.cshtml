        var index1 = @Model.ChrominosPlayedVM[0].IndexesX[0] + @Model.ChrominosPlayedVM[0].IndexesY[0] * @Model.ColumnsNumber;
        var index2 = @Model.ChrominosPlayedVM[0].IndexesX[1] + @Model.ChrominosPlayedVM[0].IndexesY[1] * @Model.ColumnsNumber;
        var index3 = @Model.ChrominosPlayedVM[0].IndexesX[2] + @Model.ChrominosPlayedVM[0].IndexesY[2] * @Model.ColumnsNumber;

        var Square1 = "Grid_" + index1;
        var Square2 = "Grid_" + index2;
        var Square3 = "Grid_" + index3;

