@model Data.Models.Game
@{
    ViewData["Title"] = "Games finished";
}

@if ((ViewBag.GamesWon as SelectList).Count() <= 1 && (ViewBag.GamesLost as SelectList).Count() <= 1 && (ViewBag.SingleGamesFinished as SelectList).Count() <= 1)
{
    <p><b>Vous n'avez pas encore de parties terminées</b></p>
}
else
{
    <p><b>Vous avez des parties terminées</b></p>
}

@if ((ViewBag.GamesWon as SelectList).Count() > 1)
{
    <div class="row">
        <div class="col-md-8">
            <form method="get" name="formGamesWin" asp-action="Show" asp-controller="Game">
                <div class="form-group">
                    <select asp-for="Id" class="form-control" asp-items="ViewBag.GamesWon" onchange="window.document.formGamesWin.submit();"></select>
                </div>
            </form>
        </div>
    </div>
}

@if ((ViewBag.GamesLost as SelectList).Count() > 1)
{
    <div class="row">
        <div class="col-md-8">
            <form method="get" name="formGamesLost" asp-action="Show" asp-controller="Game">
                <div class="form-group">
                    <select asp-for="Id" class="form-control" asp-items="ViewBag.GamesLost" onchange="window.document.formGamesLost.submit();"></select>
                </div>
            </form>
        </div>
    </div>
}

@if ((ViewBag.SingleGamesFinished as SelectList).Count() > 1)
{
    <div class="row">
        <div class="col-md-8">
            <form method="get" name="formGamesAloneFinished" asp-action="Show" asp-controller="Game">
                <div class="form-group">
                    <select asp-for="Id" class="form-control" asp-items="ViewBag.SingleGamesFinished" onchange="window.document.formGamesAloneFinished.submit();"></select>
                </div>
            </form>
        </div>
    </div>
}

<div>
    <a asp-controller="Home" asp-action="Index">Retour</a>
</div>