@using  Data.ViewModel;
@model Data.Models.Game
@{
    ViewData["Title"] = "Games finished";
}

@if ((ViewBag.ListGamesWon as List<PictureGameVM>).Count() == 0 && (ViewBag.ListGamesLost as List<PictureGameVM>).Count() == 0 && (ViewBag.ListSingleGamesFinished as List<PictureGameVM>).Count() == 0)
{
    <p><b>Vous n'avez pas encore de parties terminées</b></p>
}
else
{
    <p><b>Vous avez des parties terminées</b></p>
}

@if ((ViewBag.ListGamesWon as List<PictureGameVM>).Count() > 0)
{
    <div class="thumbnails">
        @foreach (var gameToPlay in ViewBag.ListGamesWon as List<PictureGameVM>)
        {
            <a asp-controller="Game" asp-action="Show" asp-route-id="@gameToPlay.GameId">
                <div class="thumbnail">
                    <img src="@gameToPlay.FullName" alt="vignette" />
                    <div>
                        Jeu n° @gameToPlay.GameId joué le @gameToPlay.PlayedDate
                        <br />
                        <ul>
                            @foreach (var pseudo_chromino in gameToPlay.Pseudos_chrominos)
                            {
                                string pseudo = pseudo_chromino.Key;
                                if (pseudo == ViewBag.PlayerPseudo)
                                    pseudo = "Vous";

                                <li>@pseudo : @pseudo_chromino.Value chrominos en main</li>
                            }
                        </ul>
                    </div>
                </div>
            </a>
        }
    </div>
}

