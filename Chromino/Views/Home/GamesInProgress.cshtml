@model Data.Models.Game
@{
    ViewData["Title"] = "Games in progress";
}


@if ((ViewBag.GamesWaitTurn as SelectList).Count() > 1)
{
    <div class="row">
        <div class="col-md-8">
            <form method="get" name="formGamesWaitTurn" asp-action="Show" asp-controller="Game">
                <div class="form-group">
                    <select asp-for="Id" class="form-control" asp-items="ViewBag.GamesWaitTurn" onchange="window.document.formGamesWaitTurn.submit();"></select>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <p><b>Vous n'avez pas de parties où c'est au tour d'un adversaire</b></p>
}

<div>
    <a asp-controller="Home" asp-action="Index">Retour</a>
</div>