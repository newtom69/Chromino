@using  Data.ViewModel;
@model List<PictureGameVM>;
@{
    ViewData["Title"] = "Home Page";
    int gamesNumber = Model.Count;
}

@switch (gamesNumber)
{
    case 0:
        <p><b>Vous n'avez aucune partie gagnée</b></p>
        break;
    case 1:
        <h3>Vous avez 1 partie gagnée</h3>
        <partial name="_ThumbnailPartial" model="Model" />
        break;
    default:
        <h3>Vous avez @gamesNumber parties gagnées</h3>
        <partial name="_ThumbnailPartial" model="Model" />
        break;
}
<br />
<p>
    <a asp-controller="Game" asp-action="New"><input type="button" class="btn btn-primary" value="Nouvelle partie" /></a>
</p>
<p>
    Voir vos <a asp-controller="Home" asp-action="SingleGames">parties solo en cours</a>
</p>
<p>
    Voir vos <a asp-controller="Home" asp-action="GamesLost">parties perdues</a>
</p>
<p>
    Voir vos <a asp-controller="Home" asp-action="SingleGamesFinished">parties solo terminées</a>
</p>
<p>
    Voir vos <a asp-controller="Home" asp-action="GamesInProgress">parties en attente (tour d'un adversaire)</a>
</p>
<p>
    <a asp-controller="Home" asp-action="Index">Retour</a>
</p>