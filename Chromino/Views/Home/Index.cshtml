@model Data.Models.Game

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @ViewBag.PlayerPseudo</h1>
</div>
<div>
    <a asp-controller="Game" asp-action="StartNew">Start new game</a>
</div>
<br />

@if ((ViewBag.GamesToPlay as SelectList).Count() > 1)
{
    <div class="row">
        <div class="col-md-8">
            <form name="formGamesMulti" asp-action="Show" asp-controller="Game">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <select asp-for="Id" class="form-control" asp-items="ViewBag.GamesToPlay" onchange="window.document.formGamesMulti.submit();"></select>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

            </form>
        </div>
    </div>
}

