@model Data.Models.Game

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2 class="display-5">Bienvenue @ViewBag.PlayerPseudo</h2>
</div>


@if ((ViewBag.GamesToPlay as SelectList).Count() > 1 || (ViewBag.SingleGames as SelectList).Count() > 1)
{
    <p><b>Vous avez des parties à jouer</b></p>
}

@if ((ViewBag.GamesToPlay as SelectList).Count() > 1)
{
    <div class="row">
        <div class="col-md-8">
            <form method="get" name="formGamesMulti" asp-action="Show" asp-controller="Game">
                <div class="form-group">
                    <select asp-for="Id" class="form-control" asp-items="ViewBag.GamesToPlay" onchange="window.document.formGamesMulti.submit();"></select>
                </div>
            </form>
        </div>
    </div>
}

@if ((ViewBag.SingleGames as SelectList).Count() > 1)
{
    <div class="row">
        <div class="col-md-8">
            <form method="get" name="formGamesAlone" asp-action="Show" asp-controller="Game">
                <div class="form-group">
                    <select asp-for="Id" class="form-control" asp-items="ViewBag.SingleGames" onchange="window.document.formGamesAlone.submit();"></select>
                </div>
            </form>
        </div>
    </div>
}

<div>
    <a asp-controller="Game" asp-action="New"><input type="button" class="btn btn-primary" value="Créer nouvelle partie" /></a>
</div>
<br />


<div>
    Voir vos <a asp-controller="Home" asp-action="GamesFinished">parties terminées</a>
</div>
<br />
<div>
    Voir vos <a asp-controller="Home" asp-action="GamesInProgress">parties en attente (tour d'un adversaire)</a>
</div>