@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Data.Models.Player>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WonGames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinglePlayerGamesFinished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SinglePlayerGamesPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Help)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WonGames)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SinglePlayerGamesFinished)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SinglePlayerGamesPoints)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Help)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Player" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-area="Admin" asp-controller="Player" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-area="Admin" asp-controller="Player" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
